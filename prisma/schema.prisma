generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("VMMS_DATABASE_URL")
}

model organisation {
  id          Int      @id @default(autoincrement())
  tsid        String   @default("")
  name        String   @default("")
  active      Boolean  @default(true)
  created_at  DateTime @default(now())
  modified_at DateTime @updatedAt
}

model user_profile {
  id                Int      @id @default(autoincrement())
  tsid              String   @default("")
  full_name         String   @default("")
  username          String   @unique
  active            Boolean  @default(true)
  is_email_verified Boolean? @default(false)
  created_at        DateTime @default(now())
  modified_at       DateTime @updatedAt
}

model subscription {
  id                Int      @id @default(autoincrement())
  tsid              String   @default("")
  subscription_type String   @default("")
  link_organisation String   @default("") // tsid
  created_at        DateTime @default(now())
  modified_at       DateTime @updatedAt
}

model user_role {
  id          Int      @id @default(autoincrement())
  tsid        String   @default("")
  role_type   String   @default("") // Guest | User | Admin
  link_user   String   @unique // tsid
  created_at  DateTime @default(now())
  modified_at DateTime @updatedAt
}
